{
  "manifest_version": 3,
  "name": "Notion Highlighter",
  "version": "2.0.0",
  "description": "Advanced text highlighting for Notion with persistent overlay system",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus",
    "tabs"
  ],
  "host_permissions": [
    "*://*.notion.so/*"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.notion.so/*"],
      "js": ["dist/content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["*://*.notion.so/*"]
    }
  ],
  "action": {
    "default_title": "Notion Highlighter",
    "default_popup": "popup.html"
  },
  "commands": {
    "highlight-selection": {
      "suggested_key": {
        "default": "Alt+H",
        "mac": "Alt+H"
      },
      "description": "Highlight current selection"
    },
    "clear-highlights": {
      "suggested_key": {
        "default": "Alt+Shift+C",
        "mac": "Alt+Shift+C"
      },
      "description": "Clear all highlights"
    }
  }
}